<%= link_to business_path(business), class: "card-link" do %>
  <div class="card mb-4 border rounded shadow-sm">
      <div class="card-body">
        <div>
          <p><b><%= business.name %></b></p>
          <span class="small"> üìç <%= business.address %></span>
          <p class="small"><%= business.city %> ‚Ä¢ <%= business.state %> ‚Ä¢ <b><%= business.postcode %></b></p>
        </div>
        <% business.description.split(' ')
                    .map { |word| word.gsub(/[^a-zA-Z0-9\s]/, '').strip }
                    .each do |word| %>
          <span class="badge custom-badge"><%= word %></span>
        <% end %>
      </div>
  </div>
<% end %>
