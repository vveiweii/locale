<div class="container my-4">

  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
      <li class="breadcrumb-item"><%= @business.city %></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @business.name %></li>
    </ol>
  </nav>

  <h1><%= @business.name %></h1>

  <nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <%# <li class="breadcrumb-item">review score</li>
      <li class="breadcrumb-item">review path</li> %>
      <li class="breadcrumb-item"><%= if @business.available? then "Available for booking" end %></li>
      <li class="breadcrumb-item"><%= @business.address %></li>
      <li class="breadcrumb-item"><%= @business.city %></li>
      <li class="breadcrumb-item"><%= @business.state %></li>
      <li class="breadcrumb-item"><%= @business.postcode %></li>
    </ol>
  </nav>

  <div class="container py-3">
    <div class="row swiper-container"
         data-controller="carousel">
      <h3>Offers</h3>
      <div class="col-md-8">
        <div class="container all-card mt-3 swiper-wrapper">
          <%= render "offer_card", business: @business %>
        </div>
        <%# <!-- Pagination (... or 1/10 or progress bar) -->
        <div class="swiper-pagination"></div>
        <!-- Navigation buttons (< >) -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div> %>
      </div>
    </div>
  </div>

  <div class="container py-3">
    <div class="row">
      <div class="col-md-8">
        <h3>Services</h3>
          <%= render "service_card", business: @business %>
        </div>
      </div>
    </div>
  </div>

  <div class="container py-3">
    <div class="row">
      <div class="col-md-8">
        <h3>About</h3>
        <h5><%= @business.description %></h5>
      </div>
    </div>
  </div>

</div>
