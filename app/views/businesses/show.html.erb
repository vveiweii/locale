<%# PICTURES %>
<div>
  <div class="row">
    <% if @business.photos.attached? %>
      <div class="col-md-8">
        <%= cl_image_tag @business.photos.first.key, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-md-4">
        <% @business.photos[1..2].each do |photo| %>
          <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill %>
        <% end %>
      </div>
    <% else %>
      <div class="col-md-8">
        <%= image_tag "business-placeholder.jpg", height: 300, width: 400, crop: :fill %>
      </div>
      <div class="col-md-4">
        <% 2.times do %>
          <%= image_tag "business-placeholder.jpg", height: 150, width: 200, crop: :fill %>
        <% end %>
      </div>
    <% end %>
  </div>
  <button type="button" class="btn btn-outline-light btn-sm">See all images</button>
</div>

<%# Offers %>
<div class="col-12 my-5">
  <h2>Offers</h2>
  <div class="row mt-3">
    <% @services.each do |service| %>
      <% if service.offer > 0 %>
        <div class="col-md-3">
          <%= render "offer_card", service: service %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%# All Services %>
