<div class="container mt-3">
  <% @services.each do |service| %>
    <div>
      <div class="service-card p-3 mb-3">
        <h5><%= service.name %></h5>
        <p><%= service.description %></p>
        <h6>AUD <%= service.price %></h6>
        <button class="btn btn-success service-add-button"><i class="fa-solid fa-plus fa-lg"></i> Add </button>
      </div>
    </div>
  <% end %>
</div>
