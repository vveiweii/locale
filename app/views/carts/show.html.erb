<h2>Cart show</h2>
<% @cart.line_items.each do |line_item| %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <h5><%= line_item.service.name %></h5>
          <p class="card-text"><strong>Price:</strong> <%= number_to_currency(line_item.service.price) %></p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-body d-grid gap-2">
          <%# <%= link_to "Add one", line_item_add_path(line_item), method: :post, class: "btn btn-primary btn-sm" %>
          <%# <%= link_to "Reduce one", line_item_reduce_path(line_item), method: :post, class: "btn btn-primary btn-sm" %>
          <%= button_to "Remove item", line_item_path(line_item), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<h3>Sub total: <%= number_to_currency(@cart.sub_total) %></h3>
<h3>GST: <%= number_to_currency(@cart.taxes) %></h3>

<%= link_to "Proceed to checkout", new_user_booking_path(current_user), class: "btn btn-primary" %><br>
<%= button_to "Empty cart", cart_path(@cart), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
<%= link_to "Back", request.referrer || root_path, method: :delete, class: "btn btn-success" %>
