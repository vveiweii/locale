<div class="modal fade" id="newReviewModal" tabindex="-1" aria-labelledby="newReviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= simple_form_for @review, url: user_booking_reviews_path(current_user, booking), method: :post do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="newReviewModalLabel">Add a Review</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= f.error_notification %>
          <%= f.input :description, as: :text, input_html: { rows: 4 } %>
          <%= f.input :rating, collection: 1..5, prompt: "Select a rating" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <%= f.button :submit, "Save Review", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
