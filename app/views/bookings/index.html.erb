<h2>My Bookings</h2>
<% @bookings.each do |booking| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-header">Booking ID: <%= booking.id %></h5>
      <p class="mt-3">Business: <%= booking.business.name %></p>
      <p class="mt-3">Booking Date: <%= booking.start_date %></p>
      <p>Booked Services: </p>
      <ul>
        <% booking.line_items.each do |item| %>
        <li><b><%= item.service.name %>:</b> AUD <%= item.service.price %></li>
        <% end %>
      </ul>
      <%= button_to "Cancel Booking", booking_path(booking), method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}}, class: "btn btn-primary" %>
    </div>
  </div>
  <% if booking.start_date < Date.today %>
    <%= link_to "Add Review", new_user_booking_review_path(current_user, booking), class: "btn btn-primary" %>
  <% else %>
    <p>You are not able to add a review yet</p>
  <% end %>
<% end %>
