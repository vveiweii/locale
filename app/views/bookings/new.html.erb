<div class="container">
  <h3>New Booking</h3>

  <%= simple_form_for @booking, html: { class: "form" } do |f| %>
    <%= f.error_notification %>
    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.datetime_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group my-5">
      <h4>Cart Items</h4>
      <% @cart.line_items.each do |item| %>
        <div class="cart-item">
          <p><%= item.service.name %> - AUD <%= item.service.price %></p>
        </div>
      <% end %>
    </div>
    <div class="form-group">
      <%= button_to "Confirm Booking", user_bookings_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
