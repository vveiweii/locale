<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-lg">
        <div class="card-header">
          <h2 class="text-center my-3">Sign up</h2>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-group">
              <%= f.input :name,
                          label: 'Name',
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "name" } %>
            </div>
            <div class="form-group">
              <%= f.input :email,
                          label: 'Email',
                          required: true,
                          autofocus: true,
                          input_html: { class: "form-control", autocomplete: "email" } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          label: 'Password',
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>
            <div class="form-group">
              <%= f.input :password_confirmation,
                          label: 'Password confirmation',
                          required: true,
                          input_html: { class: "form-control", autocomplete: "new-password" } %>
            </div>
            <div class="form-group d-flex align-items-center justify-content-between mt-4">
              <%= f.button :submit, "Sign up", class: "btn btn-primary rounded-pill px-5" %>
              <span> Already have an account? <%= render "devise/shared/links" %> </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
