<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-lg">
        <div class="card-header">
          <h3 class="text-center my-3">Log in</h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control py-2" } %>
            </div>
            <div class="form-group">
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control py-2" } %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.input :remember_me, as: :boolean, label: "Remember me", label_html: { class: "custom-control-label" }, wrapper_html: { class: "custom-control custom-checkbox" }, input_html: { class: "custom-control-input" } %>
              </div>
            <% end %>
            <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
              <%= f.button :submit, "Log in", class: "btn btn-primary rounded-pill px-5" %>
              <span> Don't have an account? <%= render "devise/shared/links" %> </span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
