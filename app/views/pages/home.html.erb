<div class="container">

  <div class="row my-5">
    <div class="col-8 mx-auto">
      <h1>Booking a service few steps from you, with extra benefits.</h1>
    </div>
  </div>

  <div class="search-sec">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-md-3 col-sm-6 p-0">
        <%=  form_with url: businesses_path, method: :get, class: "d-flex" do %>
          <%= text_field_tag :query,
                params[:query],
                class: "form-control search-slt",
                placeholder: "Search for a service..."
          %>
          <%= submit_tag "SEARCH", name: "", class: "btn btn-success wrn-btn" %>
        <% end %>
      </div>
    </div>
  </div>
  </div>
</div>
